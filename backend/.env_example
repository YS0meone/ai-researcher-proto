LANGSMITH_TRACING=true
LANGSMITH_API_KEY=your-langchain-api-key
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_researcher
DATABASE_ASYNC_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_researcher
DATABASE_POOL_SIZE=10
DATABASE_POOL_TIMEOUT=30
DATABASE_SQL_ECHO=false
DATABASE_MAX_OVERFLOW=20

# Postgres Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_researcher
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=papers
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-password-here

# Paper Loader configuration
LOADER_OUTPUT_DIR=./papers
LOADER_BATCH_SIZE=10
LOADER_WORKERS=2
LOADER_USE_POSTGRES=false
LOADER_ARXIV_METADATA_PATH=path/to/arxiv_metadata.json

# Vector Database Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key_here
